<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textViewStyle">@style/TextView.Default</item>
        <item name="colorAccent">@color/red.bright</item>
        <item name="alertDialogTheme">@style/DefaultDialog</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="DefaultDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/red.bright</item>
        <item name="android:textColor">@color/red.bright</item>
    </style>

    <style name="TextView.Default" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/app.default_text_size</item>
        <item name="android:textColor">@color/black.semi_transparent</item>
    </style>

    <style name="ListItem">
        <item name="android:background">@drawable/item_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white.50</item>
    </style>

</resources>
